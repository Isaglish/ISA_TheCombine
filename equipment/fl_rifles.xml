<Equipment>
	<Bind eqp="Frag Grenade">
		<to name="fl_CombineGrunt"/>
	</Bind>
	
    <Bind eqp="fl_HeavyShotgun">
		<to name="fl_CombineCharger"/>
		
		<to name="fl_HeavyShotgun_Ammo"/>

		<to name="IronSights"/>
	</Bind>
 	<Firearm name="fl_HeavyShotgun" inventoryBinding="PrimaryWeapon" category="shotgun" unlockCost="0"
			tooltip="@firearm_m500pp_name"
			description="@firearm_m500pp_desc"
			img="data/models/weapons/m500_ui.dds"

			animationSet="shotgun_pump"
		>
		<MobilityModifiers moveSpeedModifierPercent="-3" turnSpeedModifierPercent="-1"/>
		<RenderObject3D model="data/models/weapons/m500pp.khm" attachSlot="prop_back_rifle" skipGOSSAO="true" diffuseTex="data/models/weapons/m500pp.dds"/>
		<ModifiableParams
			numPellets="8"
			roundsPerMagazine="6"
			closedBolt="0"

			suppressArea="1"

			cyclicReload="0"
			reloadTime="2000"
			reloadEmptyTime="2000"
			changeInTime="1000"
			changeOutTime="1000"
			readyTime="650"
			guardTime="350"

			accuracyStart="130"
			accuracyEnd="65"
			accuracyStartDist="5"
			accuracyEndDist="100"

			suppressionScale="0.3"
		/>

		<Params
			caliberInfoText="@firearm_caliber_12gauge_name"
			operationInfoText="@firearm_operation_pumpaction_name"
			ai_rangeMin="1.0"
			ai_rangeOptimal="6.0"
			ai_rangeMax="10.0"
			ai_stopWhenShooting="false"
			hasLaser="true"
		/>

		<AttackTypes>
			<AttackType name="NWS_PumpAimedFire" rangeMeters="6"/>
			<AttackType name="NWS_PumpAimedFireLong" rangeMeters="12"/>
			<AttackType name="NWS_PumpAimedFireLongXX" rangeMeters="9999"/>
		</AttackTypes>

		<MuzzleFlash lightTemplate="ShotLightLarge" tracerTemplate="Tracer_Rifle">
			<Flare particles="FX_MUZZLE_FLASH_SHOTGUN_01" />
			<Flare particles="FX_MUZZLE_FLASH_SHOTGUN_02" />
			<Flare particles="FX_MUZZLE_FLASH_SHOTGUN_03" />
			<Flare particles="FX_MUZZLE_FLASH_SHOTGUN_04" />
		</MuzzleFlash>

		<Sounds> 
			<Equip name="870br_eqp"/>
			<Unequip name="870br_neqp"/>
			<Reload name="870br_reld"/>
			<ReloadEmpty name="870br_reld"/>
			<Fire name="heavy_shotgun_fire"/>
			<Empty name="gen_empty"/>
		</Sounds>
	</Firearm>

	<Bind eqp="fl_PulseSMG">
		<to name="fl_CombineGrunt"/>

		<to name="919FMJM882_Mp5ASMG"/>

		<to name="IronSights"/>
	</Bind>
	<Firearm name="fl_PulseSMG" inventoryBinding="PrimaryWeapon" category="rifle" unlockCost="0"
			tooltip="@firearm_fl_pulse_smg_name"
			description="@firearm_fl_pulse_smg_desc"
			img="data/models/weapons/fl_pulse_smg_ui.dds"

			animationSet="rifle"
		>
		<MobilityModifiers moveSpeedModifierPercent="-2" turnSpeedModifierPercent="0"/>
		<RenderObject3D model="data/models/weapons/mp5a3.khm" attachSlot="prop_front_rifle" skipGOSSAO="true" diffuseTex="data/models/weapons/mp5a3.dds"/>

		<ModifiableParams
			numPellets="1"
			roundsPerMagazine="45"
			closedBolt="0"

			cyclicReload="0"
			reloadTime="2700"
			reloadEmptyTime="2700"
			changeInTime="0"
			changeOutTime="0"
			readyTime="350"
			guardTime="160"

			accuracyStart="200"
			accuracyEnd="150"
			accuracyStartDist="0"
			accuracyEndDist="100"
		/>

		<Params
			caliberInfoText="@firearm_caliber_fl_pulse_smg_name"
			operationInfoText="@firearm_operation_mp5navy_name"
			ai_rangeMin="1.0"
			ai_rangeOptimal="10.0"
			ai_rangeMax="25.0"
			ai_stopWhenShooting="false"
		/>

		<AttackTypes>
			<AttackType name="Rangers_SMGAutoFire" rangeMeters="4" disabled="true"/>
			<AttackType name="Rangers_RapidFire" rangeMeters="7"/>	
			<AttackType name="Rangers_SMGBurstFire" rangeMeters="7" disabled="true"/>
			<AttackType name="Rangers_RapidFireMed" rangeMeters="12"/>
			<AttackType name="Rangers_SMGBurstFireLong" rangeMeters="12" disabled="true"/>
			<AttackType name="Rangers_CarbineAimedFire" rangeMeters="20"/>
			<AttackType name="Rangers_CarbineAimedFireXX" rangeMeters="9999"/>
		</AttackTypes>

		<MuzzleFlash lightTemplate="ShotLightLarge" tracerTemplate="Tracer_Rifle">
			<Flare particles="FX_MUZZLE_FLASH_PISTOL_01" />
			<Flare particles="FX_MUZZLE_FLASH_PISTOL_02" />
			<Flare particles="FX_MUZZLE_FLASH_PISTOL_03" />
			<Flare particles="FX_MUZZLE_FLASH_PISTOL_04" />
		</MuzzleFlash>

		<Sounds> 
			<Equip name="smg_eqp"/>
			<Unequip name="smg_neqp"/>
			<Reload name="smg_reld"/>
			<ReloadEmpty name="smg_reldempt"/>
			<Fire name="pulse_smg_fire"/>
			<Empty name="gen_empty"/>
		</Sounds>
	</Firearm>
</Equipment>