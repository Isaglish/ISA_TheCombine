<!--
Armor Penetration values:
	Level IIA = 20
	Level II = 30
	Level IIIA = 40
	Level III = 50
	Level IV = 60
 -->

<Equipment>
	<Bind eqp="CMB_OrdinalHelmet">
		<to name="CombineOrdinal"/>
	</Bind>
	<Helmet name="CMB_OrdinalHelmet" inventoryBinding="Helmet" unlockCost="0"
			tooltip="@helmet_cmb_gas_mask"
			description="@helmet_cmb_ordinal_desc"
			img="data/models/humans/attachments/cmb_ordinal_helmet_ui.dds"
		>
		<MobilityModifiers moveSpeedModifierPercent="0" turnSpeedModifierPercent="0"/>
		<ConcealmentModifier add="0" />

		<Params>
			<ProtectionArc degrees="360" coveragePercent="80" piercingProtectionLevel="50"/>
		</Params>
	</Helmet>

