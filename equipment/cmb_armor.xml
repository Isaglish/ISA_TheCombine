<Equipment>
	<!-- TODO: Civil Protection armor, similar to Soft Armor or Level IIIA of Rangers. -->
	<!-- TODO: Ordinal armor, coverage similar to Sapper's Vest. -->
	<!-- TODO: Suppressor armor, similar to Charger armor but with less protection and coverage. -->
	
    <Bind eqp="CMB_ChargerArmor">
		<to name="CombineCharger"/>
	</Bind>
	<Armor name="CMB_ChargerArmor" inventoryBinding="Armor" unlockCost="0"
			tooltip="@armor_cmb_charger_name"
			description="@armor_cmb_charger_desc"
			img="data/models/equipment/armor_noplates_ui.dds"
		>
		<MobilityModifiers moveSpeedModifierPercent="-10" turnSpeedModifierPercent="-15"/>

		<Params protectionInfoText="@equipment_protect2">
			<ProtectionArc degrees="90" coveragePercent="90" piercingProtectionLevel="999"/>
			<ProtectionArc degrees="270" coveragePercent="65" piercingProtectionLevel="999"/>
			<ProtectionArc degrees="360" coveragePercent="50" piercingProtectionLevel="999"/>
		</Params>
	</Armor>
</Equipment>